<h1>
  {{title}}
</h1>
<form method="POST">
  {{!-- Adding the field values --}}
   <fieldset>
    <label for="course" class="col-2">
      Course:
    </label>
    <select name="course" id="course">
      {{courses}}
      {{#each courses}}
        <option>{{this.name}}</option>
      {{/each}}
    </select>
  </fieldset>

  <fieldset>
    <label for="name" class="col-2">
      Name:
    </label>
    <input name="name" id="name" required />
  </fieldset>

  <fieldset>
    <label for="assignmentGrade" class="col-2">
      Grade:
    </label>
    <input name="assignmentGrade" id="assignmentGrade" required />
  </fieldset>

  <fieldset>
    <label for="dueDate" class="col-2">
      Due Date:
    </label>
    <input name="dueDate" id="dueDate" required type="date" />
  </fieldset>

  <button class="offset-3 btn btn-primary">
    Save
  </button>
</form>
