<h1>{{title}}</h1>

{{!-- If the user is logged in, then only he/she will be given permission to make changes to the data --}}
{{#if user}}
  <a href="/assignments/add" class="btn btn-info">Add a new Assignment</a>
{{/if}}
<table class="table table-striped table-hover">
  <thead>
    <th>Course</th>
    <th>Name</th>
    <th>Grade</th>
    <th>Due Date</th>
    <th>Status</th>
    <th>Changes</th>
  </thead>
  <tbody>
    {{#each dataset}}
      <tr>
         <td>{{this.course}}</td>
        <td>{{this.name}}</td>
        <td>{{this.assignmentGrade}}</td>
        <td>{{toShortDate this.dueDate}}</td>
        <td>{{this.status}}</td>
        {{!-- If the user is logged in, then only he/she will be given permission to make changes to the data --}}
        {{#if ../user}}
        <td>
          <a href="/assignments/edit/{{this._id}}" class="btn btn-success">Edit</a>
          <a
            href="/assignments/delete/{{this._id}}"
            onclick="return confirmDeletion()"
            class="btn btn-danger"
          >Delete</a>
        </td>
        {{/if}}
      </tr>
    {{/each}}
  </tbody>
</table>